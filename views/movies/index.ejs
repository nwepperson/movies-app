<!doctype html>
<html lang='en'>
<head>
  <% include ../partials/head %>
</head>

<body>
  <header>
    <% include ../partials/header %>
  </header>

  <main>
    <div>
      <h3 style="color:yellow;">Movies:</h3>
      <% movies.forEach(function(movie) { %>
        <h4>
          <form method="POST" action="/movies/<%= movie._id %>?_method=DELETE">
            <a href="/movies/<%= movie._id %>" style="color:yellow;">
              <%= movie.title + ' - ' + movie.release_year %>
            </a>
            <button type="submit" class="btn btn-info">Delete</button>
          </form>
        </h4>
      <% }) %>
    </div>
    <div>
    <a href="/movies/new" class="btn btn-default">New</a><br>
    </div><br>
  <form method="post" action="/movies/search">
  <div class="form-group">
  <input type="text"
         class="form-control"
         name="search"
         required>
  <button type="submit" class="btn btn-default">Search</button>
  </div>
  </form>
  </main>

  <footer>
    <% include ../partials/footer %>
  </footer>
</body>
</html>
