<!doctype html>
<html lang='en'>
<head>
  <% include ../partials/head %>
</head>

<body>
  <header>
    <% include ../partials/header %>
  </header>

  <main>
    <div class="test">
      <h3 style="color:yellow;">Movies:</h3>
      <% movies.forEach(function(movie) { %>
      <div class="test1">
          <form method="POST" action="/movies/<%= movie._id %>?_method=DELETE">
            <a class="test" href="/movies/<%= movie._id %>">
              <%= movie.title + ' - ' + movie.release_year %>
            </a><br>
            <img src="<%= movie.photo_url %>" class="testimg"><br>
            <button type="submit" class="btn btn-info" onclick="return confirm('Are you sure you want to delete this item?');">Delete</button>
          </form>
      </div>
      <% }) %>
    </div>
    <div>
    <a href="/movies/new" class="btn btn-default">New</a><br>
    </div><br>
  <form method="post" action="/movies/search">
  <div class="form-group">
  <input type="text"
         class="form-control"
         name="search"
         required>
  <button type="submit" class="btn btn-default">Search</button>
  </div>
  </form>
  </main>

  <footer>
    <% include ../partials/footer %>
  </footer>
</body>
</html>
